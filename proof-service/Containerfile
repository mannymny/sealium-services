FROM mcr.microsoft.com/playwright/python:v1.42.0-jammy

WORKDIR /app
ENV PYTHONPATH=/app/proof-service

COPY requirements.txt /app/requirements.txt
RUN pip install --no-cache-dir -r /app/requirements.txt

COPY proof-service /app/proof-service

CMD ["gunicorn", "-k", "uvicorn.workers.UvicornWorker", "-w", "2", "-t", "120", "-b", "0.0.0.0:8001", "proof_service.main:app"]
